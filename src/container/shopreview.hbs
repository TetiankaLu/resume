<div class="container mt-4">
    <div class="row">
        
        <div class="col-md-6">
            <div>
                
                    <div>
                        <h5>{{formBlock.feedbackBlock.title}}</h5>
                        {{#each formBlock.feedbackBlock.buttons}}
                        <div class="p-2">
                        <button href="{{link}}" class="btn {{#if isWarning}}btn-warning {{/if}} 
                        {{#if isSuccess}}btn-success {{/if}}
                        {{#if isDanger}}btn-danger {{/if}}">{{text}}</button>
                        </div>
                        {{/each}}
                    </div>
            </div>
        </div>
    </div>
</div>


                </div>
            </div>
        </div>
        <div class="col-md-6">
                <div class="card">
                    <img src="{{formBlock.goodsInfo.photo}}" class="card-img-top" alt="{{formBlock.goodsInfo.name}}">
                    <div class="card-body">
                        <h5 class="card-title">{{formBlock.goodsInfo.name}}</h5>
                        <p class="card-text">{{formBlock.goodsInfo.price}}</p>
                        <p class="card-text">{{formBlock.goodsInfo.seller.title}}: {{formBlock.goodsInfo.seller.value}}
                        </p>
                        {{#each formBlock.goodsInfo.buttons}}
                        <a href="{{link}}" class="btn {{#if isPrimary}}btn-primary {{/if}}{{#if isSecondary}}btn-secondary {{/if}}">{{text}}</a>
                        {{/each}}
                    </div>
                </div>
            </div>
    </div>
</div>


    <div class="container mt-4">
        <div class="row">
            

            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">{{formBlock.actionBlock.tabs.[2].text}}</h5>
                        {{#each reviewList}}
                        <div class="card mt-3">
                            <div class="card-body">
                                <h6 class="card-subtitle mb-2 text-muted">{{title.userName}} - {{title.caption}}</h6>
                                <p class="card-text">{{reviewBody.text.[0]}}</p>
                                <p class="card-text">{{reviewBody.rating.title}}: {{reviewBody.rating.value}}</p>
                                {{#if reviewBody.images}}
                                <div class="row mt-3">
                                    {{#each reviewBody.images}}
                                    <div class="col-md-4">
                                        <img src="{{this}}" class="img-fluid" alt="Review Image">
                                    </div>
                                    {{/each}}
                                </div>
                                {{/if}}
                                <div class="mt-3">
                                    <h6>{{reviewBody.advantages.title}}</h6>
                                    <p>{{reviewBody.advantages.text}}</p>
                                    <h6>{{reviewBody.disadvantages.title}}</h6>
                                    <p>{{reviewBody.disadvantages.text}}</p>
                                </div>
                                {{#if reviewBody.coments}}
                                <div class="mt-3">
                                    <h6>Коментарі</h6>
                                    {{#each reviewBody.coments}}
                                    <p>{{userName}} - {{date}}: {{text}}</p>
                                    {{/each}}
                                </div>
                                {{/if}}
                            </div>
                        </div>
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container mt-4">
        <div class="row">
            {{#each footer}}
            <div class="col">
                <ul class="list-unstyled">
                    {{#each this}}
                    <li><a href="{{this.link}}">{{this.text}}</a></li>
                    {{/each}}
                </ul>
            </div>
            {{/each}}
        </div>
    </div>

</body>

