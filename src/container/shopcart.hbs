<main>

  <body class='p-5'>
    <div class='container'>
      <nav
        class='navbar navbar-expand-lg navbar-light bg-light'
      >
        <button>
          <span class='navbar-toggler-icon'></span>
        </button>
        <div
          class='collapse navbar-collapse'
          id='navbarNav'
        >
          <ul class='navbar-nav'>
            {{#each navigation.links}}
              <li class='nav-item'>
                <a
                  class='nav-link'
                  href='{{href}}'
                >{{text}}</a>
              </li>
            {{/each}}
          </ul>
        </div>
      </nav>
      <h3>{{header.title}}</h3>

    </div>

    <div>
      <div>
        {{#each goodsBlock}}
          <div class='card'>
            <div class='card-body row row-cols-3'>
              <div class='col'>
                <img
                  src='{{image}}'
                  class='card-img-top'
                  alt='{{name}}'
                />
              </div>
              <div class='col'>
                <h5 class='card-title'>{{name}}</h5>
                <p class='card-text'>{{description}}</p>
                <p class='card-text'>{{price.title}}:
                  {{price.value}}</p>
                <p class='card-text'>{{amount}}</p>
              </div>
              <div class='col'>
                <button
                  class='btn btn-primary'
                >{{buttons.0.text}}</button>
                <button
                  class='btn btn-danger'
                >{{buttons.1.text}}</button>
              </div>
            </div>
          </div>
        {{/each}}
      </div>

      <div class='row'>
        <div class='col-md-6'>
          <div class='card'>
            <div class='card-body'>
              <h5 class='card-title'>{{total.title}}</h5>
              <p class='card-text'>{{total.amount}}</p>
              <p class='card-text'>{{total.delivery}}</p>
              <button
                class='btn btn-success'
              >{{total.buttons.0.text}}</button>
              <button
                class='btn btn-outline-success'
              >{{total.buttons.1.text}}</button>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class='container mt-4'>
      <h2>{{goodsOtherBlock.title}}</h2>
      <div class='row'>
        {{#each goodsOtherBlock.cards}}
          <div class='col-md-4 mb-4'>
            <div class='card'>
              <img
                src='{{image}}'
                class='card-img-top'
                alt='{{title}}'
              />
              <div class='card-body'>
                <h5 class='card-title'>{{title}}</h5>
                <p class='card-text'>{{description}}</p>
              </div>
            </div>
          </div>
        {{/each}}
      </div>
    </div>

    <div class='container mt-4'>
      <div class='jumbotron'>
        <h1 class='display-4'>{{subscribe.header}}</h1>
        <p class='lead'>{{subscribe.description}}</p>
        <p class='lead'>
          <a
            class='btn btn-primary btn-lg'
            href='{{subscribe.buttons.0.link}}'
            role='button'
          >{{subscribe.buttons.0.text}}</a>
          <a
            class='btn btn-primary btn-lg'
            href='{{subscribe.buttons.1.link}}'
            role='button'
          >{{subscribe.buttons.1.text}}</a>
        </p>
      </div>
    </div>

    <div class='container mt-4'>
      <div class='row'>
        {{#each footer}}
          <div class='col'>
            <ul class='list-unstyled'>
              {{#each this}}
                <li><a href='{{link}}'>{{text}}</a></li>
              {{/each}}
            </ul>
          </div>
        {{/each}}
      </div>
    </div>

  </body>

</main>