<main class="p-5">
 <div class="container">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    {{#each navigation.links}}
                    <li class="nav-item">
                        <a class="nav-link" href="{{href}}">{{text}}</a>
                    </li>
                    {{/each}}
                </ul>
            </div>
        </nav>
    </div>
<div class="container mt-4">
  <h1>{{header}}</h1>

  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      {{#each breadcrumb}}
        {{#if this.url}}
          <li class="breadcrumb-item"><a href="{{url}}">{{name}}</a></li>
        {{else}}
          <li class="breadcrumb-item active" aria-current="page">{{name}}</li>
        {{/if}}
      {{/each}}
    </ol>
  </nav>

  <div class="row">
    {{#each sortBlock}}
      <div class="col">
        <select class="form-control" placeholder="{{placeholder}}">
          {{#each options}}
            <option value="{{value}}">{{text}}</option>
          {{/each}}
        </select>
      </div>
    {{/each}}
  </div>

  <div class="row mt-3">
    <div class="col-md-4">
      <div class="card"> 
      <h4>{{filterBlock.sellers.title}}</h4>
      <div>
        {{#each filterBlock.sellers.list}}
          <div class="form-check">
              <input type="checkbox" class="form-check-input">
              <label class="form-check-label">{{value}}</label>
            </div>
        {{/each}}
      </div>
      

      <h4>{{filterBlock.brands.title}}</h4>
      <div>
        {{#with filterBlock.brands.input}}
        <button class="btn btn-otline">{{placeholder}}</button>
        {{#each filterBlock.brands.options}}
          <div class="form-check">
              <input type="checkbox" class="form-check-input">
              <label class="form-check-label">{{value}}</label>
            </div>
            {{/each}}
        {{/with}}
        
      </div>
      </div>
      </div>
    </div>

  

  <div class="row mt-3">
    {{#each goodsList}}
      <div class="col-md-4 mb-3">
        <div class="card">
          <img src="{{img}}" class="card-img-top" alt="{{name}}">
          <div class="card-body">
            <h5 class="card-title">{{name}}</h5>
            <p class="card-text">{{price}}</p>
            <a href="{{buttons.[0].link}}" class="btn btn-primary">{{buttons.[0].text}}</a>
          </div>
        </div>
      </div>
    {{/each}}
  </div>

</div>
<div class="container mt-4">
        <div class="row">
            {{#each footer}}
            <div class="col">
                <ul class="list-unstyled">
                    {{#each this}}
                    <li><a href="{{this.link}}">{{this.text}}</a></li>
                    {{/each}}
                </ul>
            </div>
            {{/each}}
        </div>
    </div>
</body>
</main>